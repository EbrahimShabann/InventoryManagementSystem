@model ApplicationUser

@{
    ViewData["Title"] = "Details";
}
<style>
    td a:hover,p a:hover {
        color: red !important;
        text-decoration: underline !important;
    }
</style>



<div class="main-content position-relative max-height-vh-100 h-100 bg-light">

    <div class="container-fluid py-4">
        <!-- Back Button -->
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-outline-primary" asp-action="Index">
                <i class="fa fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="row">
            <!-- Warehouses Card -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-white border-bottom d-flex align-items-center">
                        <h6 class="mb-0 fw-bold text-primary">
                            <i class="ti ti-archive fs-6 me-2"></i> WareHouses
                        </h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-3">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3 text-uppercase text-secondary text-xs fw-bold">WareHouse</th>
                                        <th class="text-center text-uppercase text-secondary text-xs fw-bold">Location</th>
                                        <th class="text-center text-uppercase text-secondary text-xs fw-bold">Phone Number</th>
                                        <th class="text-center text-uppercase text-secondary text-xs fw-bold">Total Products</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.WareHouses.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-danger fw-bold py-4">No WareHouses Found!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model.WareHouses)
                                        {
                                            <tr data-id="@item.WareHouseId" class="warehouseDetails">
                                                <td class="ps-3">
                                                    <span class="text-dark text-sm fw-semibold">@item?.Name</span>
                                                </td>
                                                <td class="text-center text-sm">
                                                    <a href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(item.Location)"
                                                       target="_blank" class="text-decoration-none fw-semibold">
                                                        @item.Location
                                                    </a>
                                                </td>
                                                <td class="text-center text-sm">
                                                    @item.PhoneNumber
                                                </td>
                                                <td class="text-center text-sm">
                                                    @item.InventoryItems.Count
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Info Card -->
            <div class="col-lg-4 mb-4">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-white border-bottom d-flex align-items-center">
                        <h6 class="mb-0 fw-bold text-primary">👤 User Details</h6>
                    </div>
                    <div class="card-body d-flex align-items-center gap-4 p-4">
                        <img src="/images/@Model.Image"
                             class="rounded-circle shadow-sm border border-3"
                             style="width: 130px; height: 130px; object-fit: cover;"
                             alt="Manager Profile" />
                        <div>
                            <h5 class="fw-bold mb-1">@Model.UserName</h5>
                            <p class="mb-1">
                                <i class="fa-solid fa-envelope text-primary me-2"></i>
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                            </p>
                            <p class="mb-1">
                                <i class="fa-solid fa-phone text-primary me-2"></i>@Model.PhoneNumber
                            </p>
                            <p class="mb-0">
                                <i class="fa-solid fa-location-dot text-primary me-2"></i>
                                <a href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(Model.Address)"
                                   target="_blank" class="text-decoration-none fw-semibold">
                                    @Model.Address
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
