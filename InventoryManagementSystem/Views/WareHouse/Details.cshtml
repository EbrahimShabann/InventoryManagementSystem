@model WareHouse
@{
    ViewData["Title"] = "Details";
}


<div class="main-content position-relative max-height-vh-100 h-100">

    <div class="container-fluid py-4">
        <div class="d-flex flex-row-reverse">
            <div>
                <a class=" btn btn-outline-light " asp-action="Index">Back to List</a>

            </div>

        </div>
        <div class="row">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header pb-0" id="flip">
                        <div class="d-flex align-items-center">
                            <h6 class="me-1">Existing Products</h6>
                            <i class="fa-solid fa-circle-chevron-down"></i>

                        </div>
                    </div>
                    @* products *@

                    <div class="row" id="panel" style="display:none;">
                        <div class="col-12">
                            <div class="card mb-4">

                                <div class="card-body px-0 pt-0 pb-2">
                                    <div class="table-responsive p-0">
                                        <table class="table align-items-center mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="text-uppercase text-secondary text-xs-center font-weight-bolder opacity-7 ps-2">Product</th>
                                                    <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Category</th>
                                                    <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Description</th>
                                                    <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Product Price</th>
                                                    <th class="text-center text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Stock Count</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.InventoryItems)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex px-2 py-1">
                                                                <div>
                                                                    <img src="~/images/@item?.Product.Image? " class="avatar avatar-sm me-3" alt="product">
                                                                </div>
                                                                <div class="d-flex flex-column justify-content-center">
                                                                    <h6 class="mb-0 text-sm">@item?.Product.Name</h6>
                                                                    <p class="text-xs text-secondary mb-0">ID: @item.ProductId</p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="text-secondary text-xs font-weight-bold">@item?.Product.Category?.Name</span>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <p class="text-xs font-weight-bold mb-0">@item.Product.Description</p>
                                                        </td>
                                                        <td class="align-middle text-center text-sm">
                                                            <span class="text-secondary text-xs font-weight-bold">@item.Product.Price &pound;</span>
                                                        </td>
                                                      
                                                        <td class="align-middle text-center text-sm">
                                                            <span class="text-secondary text-xs font-weight-bold">@item.Quantity</span>
                                                        </td>
                                                      
                                                    </tr>


                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-profile">
                    <img src="/images/iti.jpeg" alt="Image placeholder" class="card-img-top">
                   

                    <div class="card-body pt-0">

                        <div class="text-center mt-4">
                            <h3>
                                WareHouse Name: <span class="font-weight-light">@Model.Name</span>
                            </h3>
                            <h5>
                                WareHouse ID: <span class="font-weight-light">@Model.WareHouseId</span>
                            </h5>
                            <div class="h6 font-weight-300">
                                <i class="fa-solid fa-location-dot"></i> Location: @Model.Location;
                            </div>
                            <div class="h6 font-weight-300">
                                <i class="fa-solid fa-phone"></i> Phone Nmber: @Model.PhoneNumber
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



<script src="/lib/jquery/dist/jquery.min.js"></script>

<script>

    $(document).ready(function(){
      $("#flip").click(function(){
        $("#panel").slideToggle("slow");
      });
    });
</script>