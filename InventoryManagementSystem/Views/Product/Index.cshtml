@model List<Product>
@{
    ViewData["Title"] = "Product Inventory";
}

<div class="container mt-4">

    <form method="get" action="/Product/Index" class="mb-3">
        <div class="row g-2">
            <div class="col-12 col-md-3">
                <input type="text" name="searchText" class="form-control form-control-sm" placeholder="Search by name"
                    value="@ViewBag.SearchText" />
            </div>
            <div class="col-12 col-md-3">
                <select name="categoryId" class="form-select form-select-sm">
                    <option value="">-- All Categories --</option>
                    @foreach (var cat in (IEnumerable<Category>)ViewBag.Categoriey)
                    {
                        <option value="@cat.CategoryId"
                            selected="@(ViewBag.CategoryId == cat.CategoryId ? "selected" : null)">@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-3">
                <select name="supplierId" class="form-select form-select-sm">
                    <option value="">-- All Suppliers --</option>
                    @foreach (var sup in (IEnumerable<Supplier>)ViewBag.Supplier)
                    {
                        <option value="@sup.SupplierId"
                            selected="@(ViewBag.SupplierId == sup.SupplierId ? "selected" : null)">@sup.Name</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-primary btn-sm w-100">Search</button>
            </div>
        </div>
    </form>

    <div class="card shadow mb-3">
        <div class="card-header text-white bg-dark d-flex justify-content-between p-2">
            <h5 class="text-white mb-0">Product Inventory</h5>
            <a href="/Product/new" class="btn btn-success btn-sm">Add Product</a>
        </div>

        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-sm table-striped table-hover table-bordered align-middle compact-table"
                    style="font-size: 0.9rem;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Reorder Level</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>Supplier</th>
                            <th style="min-width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var category = ((IEnumerable<Category>)ViewBag.Categoriey).FirstOrDefault(c => c.CategoryId ==
                            item.CategoryId);
                            var supplier = ((IEnumerable<Supplier>)ViewBag.Supplier).FirstOrDefault(s => s.SupplierId ==
                            item.SupplierId);
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.ReorderLevel</td>
                                <td>@item.TotalStocQuantity</td>
                                <td>@(category != null ? category.Name : "N/A")</td>
                                <td>@(supplier != null ? supplier.Name : "N/A")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Product/Details/@item.ProductId" class="btn btn-info btn-sm">Details</a>
                                        <a href="/Product/Edit/@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                                        <button class="btn btn-danger btn-sm"
                                            onclick="confirmDelete(@item.ProductId)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-3">
                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                {
                    <a class="btn btn-sm @(i == (int)ViewBag.CurrentPage ? "btn-primary" : "btn-outline-primary") mx-1"
                        href="/Product/Index?page=@i">@i</a>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(productId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This product will be permanently deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Product/Delete/' + productId;
            }
        });
    }
</script>

<style>
    .compact-table th,
    .compact-table td {
        padding: 0px;
        vertical-align: middle;
    }
</style>
