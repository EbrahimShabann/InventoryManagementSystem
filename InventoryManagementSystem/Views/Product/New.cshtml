@model Product
@{
    ViewData["Title"] = "New";
    var categoryOptions = new SelectList(ViewBag.Categoriey, "CategoryId", "Name");
    var supplierOptions = new SelectList(ViewBag.Supplier, "SupplierId", "Name");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto mt-5">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient text-white">
                    <h4 class="mb-0">Add New Product</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SaveNew" asp-controller="Product" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Product Description</label>
                            <input class="form-control" asp-for="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Product Price</label>
                            <input class="form-control" asp-for="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Product Reorder Level</label>
                            <input class="form-control" asp-for="ReorderLevel" />
                            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Total Stock Quantity</label>
                            <input class="form-control" asp-for="TotalStocQuantity" />
                            <span asp-validation-for="TotalStocQuantity" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select class="form-control" asp-for="CategoryId" asp-items="categoryOptions">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Supplier</label>
                            <select class="form-control" asp-for="SupplierId" asp-items="supplierOptions">
                                <option value="">-- Select Supplier --</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Product Image</label>
                            <input class="form-control" type="file" name="Image" accept=".png, .jpg, .jpeg, image/png, image/jpeg" />
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Add Product" class="btn btn-success w-50" />
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a href="/Product/index" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
