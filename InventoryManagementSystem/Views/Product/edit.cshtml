@model Product
@{
    ViewData["Title"] = "Edit Product";
    var categoryOptions = new SelectList(ViewBag.Categoriey, "CategoryId", "Name");
    var supplierOptions = new SelectList(ViewBag.Supplier, "SupplierId", "Name");
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-gradient text-white">
            <h4 class="mb-0">Edit Product</h4>
        </div>
        <div class="card-body">

            <form method="post" asp-action="SaveEdit" asp-controller="Product" asp-route-id="@Model.ProductId" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Description</label>
                    <input class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Price</label>
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Reorder Level</label>
                    <input class="form-control" asp-for="ReorderLevel" />
                    <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Stock Quantity</label>
                    <input class="form-control" asp-for="TotalStocQuantity" />
                    <span asp-validation-for="TotalStocQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="categoryOptions">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Supplier</label>
                    <select class="form-control" asp-for="SupplierId" asp-items="supplierOptions">
                        <option value="">-- Select Supplier --</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Image</label>
                    <input type="file" class="form-control" name="Image" accept=".png, .jpg, .jpeg, image/png, image/jpeg" />
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Save" class="btn btn-success px-4" />
                    <a href="/Product/index" class="btn btn-secondary ms-2">Back</a>
                </div>

            </form>

        </div>
    </div>
</div>
