@model Product
@{
    ViewData["Title"] = "Edit";
    var categoryOptions = new SelectList(ViewBag.Categoriey, "CategoryId", "Name");
    var supplierOptions = new SelectList(ViewBag.Supplier, "SupplierId", "Name");
}

<h1>Edit Product</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Product"  asp-route-id="@Model.ProductId"  enctype="multipart/form-data">
    <div>
        <label>Product Name</label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label>Product Description</label>
        <input class="form form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label>Product Price</label>
        <input class="form form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label>Product Reorder Level</label>
        <input class="form form-control" asp-for="ReorderLevel" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>
    <div>
        <label>Total Stock Quantity</label>
        <input class="form form-control" asp-for="TotalStocQuantity" />
        <span asp-validation-for="TotalStocQuantity" class="text-danger"></span>
    </div>
    <div>
        <label>Category</label>
        <select class="form form-control" asp-for="CategoryId" asp-items="categoryOptions">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div>
        <label>Supplier</label>
        <select class="form form-control" asp-for="SupplierId" asp-items="supplierOptions">
            <option value="">-- Select Supplier --</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>
    <div>
        <label>Product Image</label>
        <input class="form form-control" type="file" name="Image" accept=".png, .jpg, .jpeg, image/png, image/jpeg" />
    </div>
    <div class="text-center mt-3">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>

</form>

<div>
    <a href="/Product/index" class="btn btn-secondary">Back</a>
</div>
